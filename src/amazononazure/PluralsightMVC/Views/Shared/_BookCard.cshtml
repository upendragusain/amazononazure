@model Book
<div class="col-sm-3" style="padding-bottom:15px; padding-bottom:15px;">
    <a>
        <img src="@Model.Media.FirstOrDefault()?.Url" />
    </a>
</div>
<div class="col-sm-9">
    <div>
        <a asp-controller="Book"
           asp-action="Details"
           asp-route-id="@Model.Id">
            <span style="font-weight: 700;">@Model.Name</span>
        </a>
    </div>
    <div>
        <span>by</span> @Html.DisplayFor(model => Model.AuthorName)
    </div>
    <div>
        <span>£</span>@Html.DisplayFor(model => Model.Price)
    </div>

    <div class="addToCart">
        <p class="button">
            <a class="btn btn-primary"
               asp-controller="ShoppingCart"
               asp-action="AddToShoppingCart"
               asp-route-bookId="@Model.Id">Add to cart</a>
        </p>
    </div>
</div>

<hr style="width:100%;">