@model PluralsightMVC.Models.Book
<hr style="width:100%;">
<div class="row">
    <div class="col-sm-3" style="padding-bottom:15px; padding-bottom:15px;">
        <a>
            <img src="@Model.Media.FirstOrDefault()?.Url" />
        </a>
    </div>
    <div class="col-sm-9">
        <div>
            <a>
                <span style="font-weight: 700;">@Model.Name</span>
            </a>
        </div>
        <div>
            <span>by</span> @Html.DisplayFor(model => Model.AuthorName)
        </div>
        <div>
            <span>£</span>@Html.DisplayFor(model => Model.Price)
        </div>
    </div>

</div>

<hr style="width:100%;">