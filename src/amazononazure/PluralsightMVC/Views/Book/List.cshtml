@model BookListViewModel

<h1>Books</h1>
<hr style="width:100%;">
@foreach (var book in Model.Data)
{
@*<div class="row">*@
    <div class="col-sm-3" style="padding-bottom:15px; padding-bottom:15px;">
        <a>
            <img src="@book.Media.FirstOrDefault()?.Url" />
        </a>
    </div>
    <div class="col-sm-9">
        <div>
            <a asp-controller="Book"
               asp-action="Details"
               asp-route-id="@book.Id">
                <span style="font-weight: 700;">@book.Name</span>
            </a>
        </div>
        <div>
            <span>by</span> @Html.DisplayFor(model => book.AuthorName)
        </div>
        <div>
            <span>£</span>@Html.DisplayFor(model => book.Price)
        </div>
    </div>

    <hr style="width:100%;">
@*</div>*@
}


